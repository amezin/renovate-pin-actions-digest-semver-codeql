{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":dependencyDashboard",
    ":pinAllExceptPeerDependencies",
    "helpers:pinGitHubActionDigestsToSemver"
  ],
  "packageRules": [
    {
      "matchDepTypes": ["action"],
      "rangeStrategy": "bump",
      "versioning": "semver-coerced",
      "pinDigests": true
    }
  ]
}